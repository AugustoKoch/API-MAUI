<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cat_API.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

			<Label Text="What does the cat say?" FontSize="30" HorizontalTextAlignment="Center"/>
			
			<Entry x:Name="txtInput" Placeholder="Miau miau..." />
			
			<Button Text="Generate car" Clicked="OnGenerateCarClicked"/>
			
			<Image x:Name="imgCat" HeightRequest="300"/>
			
			
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
